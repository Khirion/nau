<?xml version="1.0" ?>
<project name="Lightning" width='1400' height='1400'>
	<assets>
		<attributes>			
			<attribute type="PASS" name="CPLX" data="FLOAT" value="0.0"/>
			<attribute type="PASS" name="CHARGES" data="INT" value="10000" />
			<attribute type="PASS" name="GCHANCE" data="FLOAT" value="0.5" />
			<attribute type="PASS" name="GROWTH_LENGTH" data="INT" value="50" />
			<attribute type="PASS" name="WEIGHT" data="INT" value="1" />
			<attribute type="PASS" name="WIDTH" data="FLOAT" value="10.0" />			
			<attribute type="PASS" name="RESTART" data="BOOL" value="false"/>
			<attribute type="PASS" name="TIME" data="FLOAT" value="0.0"/>
			<attribute type="PASS" name="TIMECOEF" data="FLOAT" value="1.0" />
			<attribute type="PASS" name="CONTROL" data="INT" value="0" />
       </attributes>

		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="0.0" g="0.0" b="0.0" />
			</viewport>
		</viewports>

		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<TYPE value="PERSPECTIVE"/>
				<FOV value = "60"/>
				<NEAR value= "0.001"/>
				<FAR value= "1000000"/>
				<POSITION x="0.0" y="875" z="-1750" />
				<LOOK_AT_POINT x="0" y="825" z="0" />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x="-2" y="-1" z="-2" />
				<COLOR r="0.1" g="0.1" b="0.1" />
			</light>
		</lights>

		<materialLibs>
			<materialLib filename="waypoints.mlib" />
			<!--<materialLib filename="branchpoints.mlib" /> -->
			<materialLib filename="lighting.mlib" />
		</materialLibs>
	</assets>

	<pipelines>
		<pipeline name="lightning" default="true">
			<pass class="lightning" name="lightning">
				<viewport name="MainViewport" />
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<renderTarget name="scene" fromLibrary="Lighting" />
				<injectionMaps>
					<map toMaterial="*">
						<shader fromMaterial ="brightColor" fromLibrary="Lighting" />
					</map>
				</injectionMaps>
			</pass>

			<pass class="quad" name="process1" >
				<materialMaps>
					<map fromMaterial="__Quad" toMaterial="blur" toLibrary="Lighting" />
				</materialMaps>
			</pass>

			<pass class="quad" name="show" >
				<viewport name="MainViewport" />
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" toMaterial="blend" toLibrary="Lighting" />
				</materialMaps>
			</pass>
		</pipeline>
	</pipelines>

	<interface>
        <window label="settings">
			<var label="Complexity" type="PASS" context="lightning#lightning" component="CPLX" def="min=0 max=1 step=0.05"/>
			<var label="Number of Electrical Charges" type="PASS" context="lightning#lightning" component="CHARGES"/>
			<var label="Growth Chance for Branches" type="PASS" context="lightning#lightning" component="GCHANCE"/>			
			<var label="Growth Length of Segments" type="PASS" context="lightning#lightning" component="GROWTH_LENGTH"/>
			<var label="Growth Rate of Branches" type="PASS" context="lightning#lightning" component="WEIGHT"/>
			<var label="Max Sideways Spread" type="PASS" context="lightning#lightning" component="WIDTH"/>						
			<var label="Restart" type="PASS" context="lightning#lightning" component="RESTART"/>
			<var label="Time Coefficient" type="PASS" context="lightning#lightning" component="TIMECOEF" def="min=0.01 max=2 step=0.01"/>
		</window>
    </interface>
</project>