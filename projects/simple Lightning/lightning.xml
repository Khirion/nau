<?xml version="1.0" ?>
<project name="Lightning" width='1024' height='1024'>
	<assets>
		<attributes>			
			<attribute type="PASS" name="CPLX" data="FLOAT" value="1.0"/>
			<attribute type="PASS" name="BRANCH" data="INT" value="2"/>
			<attribute type="PASS" name="WIDTH" data="FLOAT" value="0.1"/>
			<attribute type="PASS" name="WEIGHT" data="FLOAT" value="0.1"/>
			<attribute type="PASS" name="GROWTH_LENGTH" data="INT" value="25" />
			<attribute type="PASS" name="RESTART" data="BOOL" value="false"/>
			<attribute type="PASS" name="TIME" data="FLOAT" value="0.0"/>
			<attribute type="PASS" name="TIMECOEF" data="FLOAT" value="1.0" />
			<attribute type="PASS" name="CONTROL" data="INT" value="0" />
       </attributes>

		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="0.0" g="0.0" b="0.0" />
			</viewport>
		</viewports>

		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<TYPE value="PERSPECTIVE"/>
				<FOV value = "60"/>
				<NEAR value= "0.001"/>
				<FAR value= "1000000"/>
				<POSITION x="0.0" y="875" z="-1750" />
				<LOOK_AT_POINT x="0" y="850" z="0" />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x="-2" y="-1" z="-2" />
				<COLOR r="0.1" g="0.1" b="0.1" />
			</light>
		</lights>

		<materialLibs>
			<materialLib filename="waypoints.mlib" />
			<!--<materialLib filename="branchpoints.mlib" /> -->
			<materialLib filename="lighting.mlib" />
		</materialLibs>
	</assets>

	<pipelines>
		<pipeline name="lightning" default="true">
			<pass class="lightning" name="lightning">
				<viewport name="MainViewport" />
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<injectionMaps>
					<map toMaterial="*">
						<shader fromMaterial ="renderScene" fromLibrary="Lighting" />
					</map>
					<map toMaterial="__Bolt">
						<shader fromMaterial ="mainColor" fromLibrary="Lighting" />
					</map>
					<map toMaterial="__Branch">
						<shader fromMaterial ="branchColor" fromLibrary="Lighting" />
					</map>
				</injectionMaps>
			</pass>
		</pipeline>
	</pipelines>

	<interface>
        <window label="settings">
			<var label="Complexity" type="PASS" context="lightning#lightning" component="CPLX" def="min=0.0 max=1.0 step=0.1"/>
			<var label="Maximum Branches per Segment" type="PASS" context="lightning#lightning" component="BRANCH" def="min=0 max=2 step=1"/>
			<var label="Length of Segments" type="PASS" context="lightning#lightning" component="GROWTH_LENGTH"/>
			<var label="Possible Curvature" type="PASS" context="lightning#lightning" component="WIDTH" def="min=0.1 max=1.0 step=0.1"/>
			<var label="Influence of the Weighted Direction" type="PASS" context="lightning#lightning" component="WEIGHT" def="min=0.0 max=1.0 step=0.1"/>
			<var label="Restart" type="PASS" context="lightning#lightning" component="RESTART"/>
			<var label="Time Coefficient" type="PASS" context="lightning#lightning" component="TIMECOEF" def="min=0.01 max=2 step=0.250"/>
		</window>
    </interface>
</project>